{
  "manifest_version": 3,
  "name": "Morgo Tools Build",
  "version": "1.0",
  "description": "Copies fields from BuildingScan page and pastes them into DutSimulationForm page or Dutchie POS system.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],  
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.css", "logo.png"],
      "matches": ["<all_urls>"]
    }
  ]
}